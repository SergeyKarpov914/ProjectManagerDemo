<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net8.0-windows</TargetFramework>
    <Nullable>disable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <UseWPF>true</UseWPF>
    <RootNamespace>Clio.$(MSBuildProjectName.Replace(" ", "_"))</RootNamespace>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="appsettings.json" />
    <None Remove="image\hamburger_icon.png" />
    <None Remove="nlog.config" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="appsettings.json">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
    <Content Include="nlog.config">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.DependencyInjection" Version="8.0.1" />
    <PackageReference Include="Microsoft.Extensions.Hosting" Version="8.0.1" />
    <PackageReference Include="Syncfusion.Licensing" Version="30.2.7" />
    <PackageReference Include="Syncfusion.SfBusyIndicator.WPF" Version="30.2.7" />
    <PackageReference Include="Syncfusion.SfInput.WPF" Version="30.2.7" />
    <PackageReference Include="Syncfusion.SfNavigationDrawer.WPF" Version="30.2.7" />
    <PackageReference Include="Syncfusion.Shared.WPF" Version="30.2.7" />
    <PackageReference Include="Syncfusion.Tools.WPF" Version="30.2.7" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\AspClientServerPlatform.Mk1\Core\Core.Lib\Core.Lib.csproj" />
    <ProjectReference Include="..\..\AspClientServerPlatform.Mk1\Core\Core8\Core8.csproj" />
    <ProjectReference Include="..\ProjectManagerModel\ProjectManagerModel.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Resource Include="image\hamburger_icon.png">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Resource>
  </ItemGroup>

</Project>
